@using System.Activities.Statements
@using System.Collections.Concurrent
@model HomeVidProject.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



  @{
     var formMode = Model.Movie != null ? "Edit Movie" : "New Movie";
  }

    <h2>@formMode</h2>


@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new {@class = "form-control input-sm"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new {@class = "form-control input-sm"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), "Selec Genre", new {@class = "form-control input-sm"})

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control input-sm" })
    </div>


    @Html.HiddenFor(m => m.Movie.Id)

    <button type="submit" class="btn btn-success btn-sm">Save</button>
}

